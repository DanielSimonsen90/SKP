<Page x:Class="Dancord.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dancord"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="250" HorizontalAlignment="Left"/>
        <StackPanel DockPanel.Dock="Right" Width="250" HorizontalAlignment="Right"/>
        <DockPanel DockPanel.Dock="Left">
            <TextBlock HorizontalAlignment="Center" FontSize="36" Height="60" DockPanel.Dock="Top">Username</TextBlock>
            <TextBox x:Name="UsernameBox" Height="40" DockPanel.Dock="Top" VerticalAlignment="Top"></TextBox>
            <TextBlock HorizontalAlignment="Center" FontSize="36" Height="60" DockPanel.Dock="Top">Password</TextBlock>
            <TextBox x:Name="PasswordBox" Height="40" DockPanel.Dock="Top" VerticalAlignment="Top"></TextBox>
            <Button Height="40" DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="24" Click="Login_Pressed">Login</Button>
            <Button Height="40" DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="24" Click="CreateLogin_Pressed" >Create Login</Button>
        </DockPanel>
    </DockPanel>
</Page>
